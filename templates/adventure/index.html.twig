{% extends 'base.html.twig' %}

{% block title %}Adventure{% endblock %}

{% block body %}
    <div class="row justify-content-center" {{ stimulus_controller('adventure-battle') }}></div>
    <div>
        <span hidden id="csrfToken">{{ csrf_token(csrfToken) }}</span>
    </div>
    <input id="g-recaptcha" data-action="adventure_battle" name="g-recaptcha-response" hidden value=""></input>
{% endblock body %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('adventure_battle') }}
{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/axios/dist/axios.min.js" defer></script>
    {{ encore_entry_script_tags('adventure_battle') }}
{% endblock javascripts %}