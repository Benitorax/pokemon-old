{% extends 'mail_base.html.twig' %}

{% block title %}Activate your account{% endblock %}

{% block body %}
    <h3 class="mt-3">Hello {{username}},</h3>

    <p>Congrats for your registration, you need to click on this link below to activate your account:</p>
    <p><a href='{{ url('app_email_confirm', {'token': token}) }}'>{{ url('app_email_confirm', {'token': token}) }}</a></p>
{% endblock %}