{% extends 'mail_base.html.twig' %}

{% block title %}You have received a new message{% endblock %}

{% block body %}
    <h3>Hello {{username}},</h3>

    <p>You have received a new message from <strong>{{message.authorName}}</strong> ({{message.authorEmail}}), the {{message.createdAt|date('m/d/Y')}}.</p>
    <p><strong>Object:</strong> {{message.object}}</p>
    <p><strong>Message</strong><br>
        {{message.content}}
    </p>
{% endblock %}