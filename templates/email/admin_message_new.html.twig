{% extends 'mail_base.html.twig' %}

{% block title %}You have received a new message{% endblock %}

{% block body %}
    <h3 class="mt-3">Hello {{username}},</h3>

    <p>You have received a new message from <strong>{{message.author.username}}</strong>, the {{message.createdAt|date('m/d/Y')}}.</p>
    <p><strong>Object:</strong> {{message.object}}</p>
    <p><strong>Message</strong><br>
        {{message.body}}
    </p>
{% endblock %}