{% extends 'mailBase.html.twig' %}

{% block title %}Reset your Passwordt{% endblock %}

{% block body %}
    <h3 class="mt-3">Hello {{username}},</h3>

    <p>
        To reset your password, click the link below to reset it:
        <br/>
        <a href='{{ url('app_password_reset', {'token': token}) }}'>{{ url('app_password_reset', {'token': token}) }}</a>
    </p>
    <p>If you didn't request it, ignore this email.</p>
    <p>Yours sincerely,</p>
    <p class="text-success font-weight-bold">PokeCompany</p>
{% endblock %}